<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="180dp">

    <TextView
        android:id="@+id/ggname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#E91E63"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:text="nick name: " />

    <TextView
        android:id="@+id/nickname"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="123dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:textColor="#03A9F4"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/call"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignBottom="@+id/TextView"
        android:layout_alignParentRight="true"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="-52dp"
        app:srcCompat="@drawable/the_call" />

    <ImageView
        android:id="@+id/facebook"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_below="@+id/TextView"
        android:layout_alignBottom="@+id/call"
        android:layout_alignParentRight="true"
        android:layout_marginTop="11dp"
        android:layout_marginRight="293dp"
        android:layout_marginBottom="-3dp"
        app:srcCompat="@drawable/fb" />

    <ImageView
        android:id="@+id/instagram"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignBottom="@+id/call"
        android:layout_alignParentRight="true"
        android:layout_marginRight="229dp"
        android:layout_marginBottom="-2dp"
        app:srcCompat="@drawable/insta" />

    <ImageView
        android:id="@+id/ggemail"
        android:layout_width="49dp"
        android:layout_height="39dp"
        android:layout_alignBottom="@+id/TextView"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="false"
        android:layout_marginRight="152dp"
        android:layout_marginBottom="-55dp"
        app:srcCompat="@drawable/mail" />

    <ImageView
        android:id="@+id/message"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/call"
        android:layout_alignParentRight="true"
        android:layout_marginRight="78dp"
        android:layout_marginBottom="-1dp"
        app:srcCompat="@drawable/message" />

    <ImageView
        android:id="@+id/edit"
        android:layout_width="36dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="69dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="19dp"
        android:layout_toEndOf="@+id/ggname"
        app:srcCompat="@drawable/edit_btn" />

    <ImageView
        android:id="@+id/delete"
        android:layout_width="36dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="107dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="19dp"
        android:layout_toEndOf="@+id/ggname"
        app:srcCompat="@drawable/delete_btn" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/ggemail"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="-16dp"
        android:background="?android:attr/listDivider" />

    <ImageView
        android:id="@+id/deleteBtn"
        android:layout_width="183dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="164dp"
        android:layout_marginTop="30dp"
        android:alpha="0"
        app:srcCompat="@drawable/delete" />

    <ImageView
        android:id="@+id/editBtn"
        android:layout_width="191dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="164dp"
        android:layout_marginTop="30dp"
        android:alpha="0"
        app:srcCompat="@drawable/edit" />

    <ImageView
        android:id="@+id/yes"
        android:layout_width="49dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="196dp"
        android:layout_marginBottom="37dp"
        android:alpha="0"
        app:srcCompat="@drawable/yes" />

    <ImageView
        android:id="@+id/no"
        android:layout_width="49dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="265dp"
        android:layout_marginBottom="38dp"
        android:alpha="0"
        app:srcCompat="@drawable/no" />

</RelativeLayout>